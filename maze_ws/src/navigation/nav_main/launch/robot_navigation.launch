<launch>
  <!-- Arguments -->
  <arg name="model" default="$(optenv ROBOT_MODEL  turtlebot_burger)" doc="model type [turtlebot, turtlebot_burger, rosbot, nexus_4wd_mecanum]"/>
  <arg name="map_file" default="$(find nav_main)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="is_simulation" default="false"/>

  <!-- Physical Configuration -->
  <group if="$(arg is_simulation)"> 
    <include file="$(find nav_main)/launch/robot_configuration.launch" />
  </group>

  <!-- Robot BringUp  -->
  <include file="$(find nav_main)/launch/robot_bringup.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find nav_main)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find nav_main)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="holonomic_robot" value="$(eval arg('model') == 'nexus_4wd_mecanum')"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find nav_main)/rviz/nav_$(arg model).rviz"/>
  </group>
</launch>
